# ── Google / Gmail ────────────────────────────────────────────────────────────
# From Google Cloud Console → APIs & Services → Credentials → OAuth 2.0 Client
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Run `npm run get-gmail-token` ONCE to generate this, then paste the result here
GOOGLE_REFRESH_TOKEN=

# ── Slack ─────────────────────────────────────────────────────────────────────
# From api.slack.com → Your App → OAuth & Permissions → User OAuth Token (xoxp-...)
SLACK_TOKEN=

# ── Asana ─────────────────────────────────────────────────────────────────────
# From app.asana.com → Profile → My Profile Settings → Apps → Manage Developer Apps → Personal Access Tokens
ASANA_TOKEN=
# Optional: override which workspace to pull from (defaults to your first workspace)
ASANA_WORKSPACE_GID=

# ── Anthropic (AI prioritization) ────────────────────────────────────────────
# From console.anthropic.com → API Keys
# If omitted, the app uses a simpler heuristic fallback — still works!
ANTHROPIC_API_KEY=
